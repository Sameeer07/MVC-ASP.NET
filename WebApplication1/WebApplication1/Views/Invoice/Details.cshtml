            var tamount = 0;
            for (var i = 0; i < data.Length; i++) {
                html = '<tr>' + '<td>' + data[i].OId +
                    '</td>' + '<td>' + data[i].PName +
                    '</td>' + '<td>' + data[i].Price +
                    '</td>' + '<td>' + data[i].Qty +
                    '</td>' + '<td>' + data[i].Amt +
                    '</td>' + '</tr>';
